<% layout('./layouts/boilerplate.ejs') -%>
<body>
  <div class="container mt-3 mb-5">
    <!-- Page Header -->
    <div class=" mb-3">
      <h6 class="display-6">Explore</h6>
    </div>

    <!-- Posts Grid -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% for(post of allPost) { %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <!-- Card Header -->
          <div class="card-header bg-light text-black">
            <h5 class="card-title mb-0"><%= post.topic %></h5>
          </div>

          <!-- Card Body -->
          <div class="card-body">
            <p class="card-text text-muted"><%= post.question %></p>
            <p class="text-muted">by: <i><%= post.owner.username%></i></p>
          </div>

          <!-- Card Footer -->
          <div class="card-footer bg-light">
            <div class="d-flex justify-content-between align-items-center">
              <!-- View Details Button -->
              <a href="/posts/<%= post._id %>" class="btn btn-primary btn-sm">
                <i class="fas fa-eye me-2"></i>View Details
              </a>

              <!-- Delete Button -->
              <form
                action="/posts/<%= post._id %>?_method=DELETE"
                method="POST"
                class="d-inline"
                onsubmit="return confirm('Are you sure you want to delete this post?');"
              >
                <button type="submit" class="btn btn-danger btn-sm">
                  <i class="fas fa-trash me-2"></i>Delete
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <% } %>
    </div>
</body>
