<% layout('./layouts/boilerplate.ejs') -%>
<body>
  <div class="container mt-5">
    <!-- Post Card -->
    <div class="card shadow-lg">
      <div class="card-header bg-light text-black">
        <h4 class="card-title mb-0"><%= post.topic %></h4>
      </div>
      <div class="card-body">
        <h5 class="card-subtitle text-primary mb-3"><%= post.question %></h5>
        <p class="card-text text-muted"><%= post.answer %></p>
        <p>createdby: <i><%= post.owner.username%></i></p>
      </div>

      <%if(currUser && currUser._id.equals(post.owner._id)){%>
        <div class="card-footer bg-light">
          <div class="d-flex justify-content-between align-items-center">
            <!-- Edit Button -->
            <a href="/posts/<%= post._id %>/edit" class="btn btn-primary btn-sm">
              <i class="fas fa-edit me-2"></i>Edit Post
            </a>
  
            <!-- Delete Button -->
            <form
              action="/posts/<%= post._id %>?_method=DELETE"
              method="POST"
              class="d-inline"
              onsubmit="return confirm('Are you sure you want to delete this post?');"
            >
              <button type="submit" class="btn btn-danger btn-sm">
                <i class="fas fa-trash me-2"></i>Delete Post
              </button>
            </form>
          </div>
        </div>
      </div>
      <%}%>

</body>
